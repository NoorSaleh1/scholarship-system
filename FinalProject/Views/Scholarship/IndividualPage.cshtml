@model FinalProject.Models.scholarship
@{
    ViewBag.Title = "ScholarshipPage";
    Layout = "~/Views/Shared/_OurLayout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@Model.Name</h2>
             
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <div class="swiper-slide">
                                <img src="~/assets/img/about.jpg" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/about.jpg" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/assets/img/about.jpg" alt="">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Scholarship Details</h3>
                        <ul>
                            <li><strong>Date of start registration</strong>:@Model.DateOfRegisterStart</li>
                            <li><strong>Date of end registration</strong>:@Model.DateOfRegisterEnd</li>
                            <li><strong>Percentage required</strong>up to :@Model.Percentage</li>
                            <li><strong>additions</strong>:@Model.Constraint</li>
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        
                        <p>
                           @Model.AdditionalInfo
                        </p>
                    </div>
                </div>

            </div>
            <div class="row">
                <h3>Register now</h3>
                @Html.ValidationSummary(false,"",new { @class = "text-danger" })
                <p style="color:forestgreen">@ViewBag.Message</p>
                <form method="post" role="form" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="Name" class="form-control" id="name" placeholder="Your Full Name" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="Email" id="email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="Address" id="subject" placeholder="Your Address" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="per">Your certificate in high School</label>
                        <input type="file" class="form-control" name="Percentage" id="per" placeholder="Your certificate in high School" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="rec">Your Recommendation</label>
                        <input type="file" class="form-control" name="Recommendation" id="rec" placeholder="Your Recommendation" required>
                    </div>

                    <div class="form-group mt-3">
                        <label class="label-default" for="birth">Date of birth:</label>
                        <input type="date" class="form-control" name="BirthDate" id="birth" placeholder="Your Date of birth" required>
                    </div>
                    <div class="form-group mt-3">
                        <label class="label-default" for="graduate">Date of graduate from high School:</label>
                        <input type="date" class="form-control" name="DateOfGraduate" id="graduate" placeholder="Your Date of graduate fro High school" required>
                    </div>
                    <br />
                    Gender:
                    <div class="form-check form-check-inline">

                        <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="Male">
                        <label class="form-check-label" for="inlineRadio1">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="Female">
                        <label class="form-check-label" for="inlineRadio2">Female</label>
                    </div>

                    @*<div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
            </div>*@


                    <div class="text-center"><button type="submit" class="btn btn-warning">Send</button></div>

                </form>
            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->
