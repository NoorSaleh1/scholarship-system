@model FinalProject.Models.scholarship

@{
    ViewBag.Title = "AddScholarship";
    Layout = "~/Views/Shared/_OurLayout.cshtml";
}
    <section>
        <div class="container">
            <h2>AddScholarship</h2>
            <div class="row mt-5">


                <div class="col-lg-8 mt-5 mt-lg-0">

                    <form method="post" role="form" class="mvc">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="Name" class="form-control" id="name" placeholder="Name" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="text" class="form-control" name="Percentage" placeholder="Percentage" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="label-default" for="start">Date of Register start:</label>
                                <input type="date" class="form-control" name="DateOfRegisterStart" id="start" required>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="label-default" for="end">Date of Register end:</label>

                                <input type="date" class="form-control" name="DateOfRegisterEnd" id="end" required>
                            </div>
                        </div>
                        <div class="row mt-3 mt-md-0">
                            <div class="col-md-6 form-group">
                                <input type="text" class="form-control" name="Constraint" placeholder="Constraint">
                            </div>
                            <div class="col-md-6 form-group">

                                <textarea class="form-control" name="AdditionalInfo" placeholder="AdditionalInfo"></textarea>
                            </div>
                        </div>



                        <p class="text-bg-danger">@Html.ValidationSummary()</p>
                        <div class="text-center"><button type="submit" class="btn btn-warning">Add</button></div>

                    </form>

                </div>

            </div>
        </div>
    </section>

