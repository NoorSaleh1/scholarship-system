@model FinalProject.Models.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_OurLayout.cshtml";
}
    <section>
        <div class="container" >
            <h2>Add Admin</h2>

            <div class="row mt-5">


                <div class="col-lg-8 mt-5 mt-lg-0">

                    <form method="post" role="form" class="mvc">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="Name" class="form-control" id="name" placeholder="Name" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="Email" id="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label for="DOB">Date Of birth</label>

                            <input type="date" class="form-control" name="DOB" id="DOB" placeholder="Date of birth" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="eng">Date Of engaged</label>

                            <input type="date" class="form-control" name="DateOfEngaged" id="eng" placeholder="Date of engaged" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="text" name="Gender" class="form-control" id="name" placeholder="Gender" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="number" name="Salary" class="form-control" id="name" placeholder="Salary" required>
                        </div>

                        <p class="text-bg-danger">@Html.ValidationSummary()</p>
                        <div class="text-center pt4 "><button class=" btn btn-warning " type="submit">Add</button></div>

                    </form>

                </div>

            </div>
        </div>
    </section>